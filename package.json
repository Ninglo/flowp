{
  "name": "flowp",
  "version": "0.2.5",
  "description": "Promise based utilities",
  "keywords": [
    "promise",
    "mutex",
    "semaphore",
    "channel"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "test": "vitest --coverage",
    "prepare": "husky install",
    "setup-ci": "npm i -g pnpm && pnpm i",
    "build:docs": "typedoc && cp -r assets/* docs"
  },
  "author": "Semesse",
  "repository": "https://github.com/Semesse/flowp",
  "homepage": "https://flowp.pages.dev",
  "license": "MIT",
  "sideEffects": false,
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/benchmark": "^2.1.1",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vitest/coverage-istanbul": "^0.22.1",
    "benchmark": "^2.1.4",
    "eslint": "^8.22.0",
    "eslint-config-alloy": "^4.6.2",
    "husky": "^7.0.4",
    "prettier": "^2.7.1",
    "tsup": "^5.12.9",
    "typedoc": "^0.22.18",
    "typedoc-theme-oxide": "^0.1.6",
    "typescript": "4.7.4",
    "vitest": "^0.22.1"
  }
}
